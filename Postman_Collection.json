	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Fetch CSRF Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Store CSRF token for subsequent requests",
									"pm.collectionVariables.set('csrfToken', pm.response.headers.get('X-CSRF-Token'));",
									"",
									"pm.test('CSRF token received', function() {",
									"    pm.expect(pm.response.headers.get('X-CSRF-Token')).to.not.be.empty;",
									"    pm.expect(pm.response.headers.get('X-CSRF-Token')).to.not.equal('Required');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "HEAD",
						"header": [
							{
								"key": "X-CSRF-Token",
								"value": "Fetch"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/A_BusinessPartner",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"A_BusinessPartner"
							]
						}
					},
					"response": []
				}
			]
		},
